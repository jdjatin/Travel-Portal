{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../views",
        "outDir": "dist/views",
        "watchAssets": true
      },
      "mail/templates/**/*"
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin"
      }
    ]
  }
}